{
  "manifest_version": 2,
  "name": "Cookie Crumbler",
  "version": "0.1.0",
  "description": "__MSG_Automatically_delete_cookies_you_dont_want__",
  "default_locale": "en",
  "background": {
    "scripts": [
      "dist/js/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "alarms",
    "browsingData",
    "cookies",
    "notifications",
    "privacy",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "browser_style": true,
    "default_title": "Cookie Crumbler",
    "default_popup": "html/popup.html",
    "default_icon": {
      "256": "icons/icon-256.png"
    }
  },
  "options_ui": {
    "page": "html/settings.html"
  },
  "icons": {
    "256": "icons/icon-256.png"
  }
}
