{
  "name": "cookie-crumbler",
  "version": "0.1.0",
  "description": "An open source browser extension for automatically deleting cookies you don't want.",
  "scripts": {
    "test": "TS_NODE_PROJECT=test/tsconfig-test.json mocha --require ts-node/register 'test/**/*.{ts,tsx}'",
    "build:styles": "node-sass --recursive --output dist/css scss",
    "watch:styles": "npm run build:styles -- --watch",
    "build:transpile": "tsc -p src",
    "watch:transpile": "tsc -p src -w",
    "build:bundle": "node build.js",
    "watch:bundle": "node build.js -w",
    "build": "rimraf lib dist && npm run build:transpile && npm run build:bundle && npm run build:styles",
    "zip": "rimraf addon.zip && zip -r addon.zip . -i 'dist/*' -i 'html/*' -i 'icons/*' -i 'vendor/*' -i '_locales/*' -i 'manifest.json' -x '**/*.map' -x '**/.DS_Store'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seansfkelley/cookie-crumbler.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/classnames": "^0.0.32",
    "@types/glob": "^5.0.33",
    "@types/lodash-es": "^4.14.5",
    "@types/mocha": "^2.2.44",
    "@types/react": "^16.0.20",
    "@types/react-dom": "^16.0.2",
    "@types/tldjs": "^1.7.1",
    "chai": "^4.1.2",
    "glob": "^7.1.2",
    "mocha": "^4.0.1",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-builtins": "^2.1.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-watch": "^3.2.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "chrome-extension-async": "^3.2.4",
    "classnames": "^2.2.5",
    "lodash-es": "^4.17.4",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "tldjs": "^2.3.1"
  }
}
